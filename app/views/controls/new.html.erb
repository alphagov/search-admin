    breadcrumbs: [
      {
        title: t("controls.index.page_title"),
        url: controls_path
      },
      {
        title: t(".page_title", action_name: t_model_name(@control.action)),
      }
    ]
  } %>
<% end %>

<%= render "page_title", title: t(".page_title", action_name: t_model_name(@control.action)) %>

<%= render "form", control: @control %>
