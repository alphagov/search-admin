<%= form_for(bet) do |f| %>
  <%= render "govuk_publishing_components/components/input", {
    label: {
      text: 'Link'
    },
    name: "bet[link]",
    hint: "/govuk-path or https://example.org/external-path",
    value: bet.link,
    id: "bet_link"
  } %>

  <%= render "govuk_publishing_components/components/input", {
    label: {
      text: 'Position'
    },
    type: "number",
    name: "bet[position]",
    value: bet.position,
    id: "bet_position"
  } %>

  <%= render "govuk_publishing_components/components/checkboxes", {
    name: "bet[is_worst]",
    items: [
      {
        label: "Is worst bet?",
        value: 1,
        checked: !bet.is_best
      }
    ]
  } %>

  <%= render "govuk_publishing_components/components/textarea", {
    label: {
      text: "Comment"
    },
    name: "bet[comment]",
    value: bet.comment
  } %>

  <input type="hidden" name="bet[query_id]" value="<%= query.id %>" />

  <h3 class="govuk-heading-m">Set bet expiry</h3>

  <%= render "govuk_publishing_components/components/checkboxes", {
    name: "bet[permanent]",
    items: [
      {
        label: "Make permanent?",
        value: 1,
        checked: false
      }
    ]
  } %>
  <p class="govuk-body">or<p/>

  <%= render "govuk_publishing_components/components/date_input", {
    name: "bet[expiration_date]",
    legend_text: "Set an expiry date",
    hint: "For example, 31 03 2020",
    error_message: false
  } %>

  <%= render "govuk_publishing_components/components/button", {
    text: "Save",
    name: "bet[id]",
    margin_bottom: true
  } %>
<% end %>
